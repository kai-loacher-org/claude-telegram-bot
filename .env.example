# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key (for Whisper transcription)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (OPTIONAL - only for pay-as-you-go)
# Leave empty to use Claude Code's local login (subscription like Max/Pro)
# ANTHROPIC_API_KEY=sk-ant-...

# Allowed Telegram User IDs (comma-separated, leave empty to allow all)
# Get your ID from @userinfobot
ALLOWED_USERS=123456789,987654321

# Working directory for Claude Code (default: current directory)
WORKING_DIRECTORY=/path/to/your/project

# Claude Code model (leave empty to let Claude Code decide)
# Empty = Uses Opus, falls back to Sonnet when tokens exhausted
# Options: sonnet, opus, haiku, or leave empty for auto
CLAUDE_MODEL=

# Session prefix (default: telegram)
SESSION_PREFIX=telegram

# Enable transcript refinement to remove stutters and filler words (default: true)
REFINE_TRANSCRIPTS=true
